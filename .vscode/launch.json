	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Run All Tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\tests\\out\\run.js",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Current Test (All)",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${file}",
			"args": [],
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Current Test (Selective)",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "",
			"args": [
				"--test-only",
				"${workspaceFolder}/tests/out/${fileDirnameBasename}/${fileBasenameNoExtension}.js"
			],
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		}
	]
}